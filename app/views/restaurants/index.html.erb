<% if @restaurants.any? %>
<ul>
	<% @restaurants.each do |restaurant| %>
		<li><%= restaurant.name %> (<%= restaurant.cuisine %>) <a href="/restaurants/<%= restaurant.id %>/edit">Edit</a></li> 
	<% end %>
</ul>
<% else %>
No restaurants available
<% end %>

<a href="/restaurants/new">Add restaurant</a>
