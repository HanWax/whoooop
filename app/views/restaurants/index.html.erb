<% if @restaurants.any? %>
<ul>
	<% @restaurants.each do |restaurant| %>
		<li><%= restaurant.name %> (<%= restaurant.cuisine %>) Average rating: <%= restaurant.average_rating %>
		<%= link_to 'Edit', edit_restaurant_path(restaurant) %>
		<%= link_to 'Delete', restaurant_path(restaurant), method: :delete %>

		<%= link_to 'Write review', new_restaurant_review_path(restaurant) %>
		<% restaurant.reviews.each do |review| %>
		<%= review.thoughts %> (<%= review.rating %>) 
		<% end %>
		
		</li> 
	<% end %>
</ul>
<% else %>
No restaurants available
<% end %>

<%= link_to 'Add restaurant', new_restaurant_path %>
