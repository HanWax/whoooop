
<% if @restaurants.any? %>
<section class="Restaurantfeed">
	<% @restaurants.each do |restaurant| %>
	<article>
		<h2><%= restaurant.name %></h2>
		<section class='link'>
			<%= link_to 'Edit', edit_restaurant_path(restaurant) %>
			<%= link_to 'Delete', restaurant_path(restaurant), method: :delete %>

			<%= link_to 'Write review', new_restaurant_review_path(restaurant) %>
		</section>

		<p>(<%= restaurant.cuisine %>)</p> 
		<h3>Average rating: <%= restaurant.average_rating %></h3>
		<% if restaurant.reviews.any? %>
			<p><%= restaurant.reviews.first.thoughts %> (<%= restaurant.reviews.first.rating %>)</p> 
		<% end %>
	</article>	 
	<% end %>
</section>
<% else %>
No restaurants available
<% end %>



