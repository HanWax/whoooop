
<html>

<article class='restaurant_name'>

<section>
<table>
<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <tr>
      <td><h2><%= restaurant.name %></h2></td> 
      <td>(<%= restaurant.cuisine %>)</td>
      <td>Average rating: <%= star_rating(restaurant.average_rating) %></td>
    </tr>
      <% restaurant.reviews.each do |review| %>
       <tr>
         <td> <%= "#{review.thoughts} (#{star_rating(review.rating)})" %></td>
          <span class='like_count'>
          <td><%= review.likes.count %> 
          </span> whoops</td>

        <td><div class='whoop'><%= link_to 'Whoop this review', review_likes_path(review), class: 'like-link' %></div></td>
        </tr>
      <% end %>
      <tr>
  <td><%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %></td>
    <td><%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %></td>
    <td><%= link_to "Write review for #{restaurant.name}", new_restaurant_review_path(restaurant) %></td>

  <% end %>
  
  </section>
<% else %>
  No restaurants available
<% end %>
<br>
<%= link_to 'Add a restaurant', new_restaurant_path %>
  </article>
</html>
